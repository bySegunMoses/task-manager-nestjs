doctype html
html
  head
    title Task Manager
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css")
  body.bg-gray-100
    div.container.mx-auto.p-8
      h1.text-2xl.font-bold.mb-4 Task Manager
      ul.bg-white.shadow-md.rounded-lg.p-4
        each task in tasks
          li.border-b.border-gray-300.p-2
            h2.font-semibold.text-lg= task.title
            p= task.description
            span.text-sm.text-gray-600 Priority: #{task.priority}
            span.text-sm.text-gray-600 Status: #{task.status}
